@using EDSDoctorsApp.Resources

<!DOCTYPE HTML>
<html lang="en" dir="@AppResources.dir">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, viewport-fit=cover" />
    <title>eDoctor Patient - Find A Doctor</title>
    <link rel="stylesheet" type="text/css" href="@string.Concat("Sticky/styles/bootstrap",AppResources.dir2,".css")">
    <link href="Sticky/fonts/css.css?family=Roboto:300,300i,400,400i,500,500i,700,700i,900,900i|Source+Sans+Pro:300,300i,400,400i,600,600i,700,700i,900,900i&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="Sticky/fonts/css/fontawesome-all.min.css">
    <link rel="stylesheet" type="text/css" href="Sticky/styles/highlights/highlight_orange.css">
    <link rel="manifest" href="_manifest.json" data-pwa-version="set_in_manifest_and_pwa_js">
    <link rel="apple-touch-icon" sizes="180x180" href="Sticky/app/icons/icon-192x192.png">
    <link href="Sticky/styles/highlights/highlight_dark.css" rel="stylesheet" />
</head>
<body class="theme-light" data-highlight="highlight-dark" data-gradient="body-default">
    <div id="page">
        <div class="header header-fixed header-logo-center header-auto-showx">
            <i class="header-title"><img class="img-fluidx ps-3 pe-3" style="height:30px" src="Sticky/images/eDoctorGroupLight.png"></i>
            <a href="hybrid:GotoHome" data-back-button class="header-icon header-icon-1"><i class="fas fa-arrow-@AppResources.dir3"></i></a>
            @*<a href="page-forgot-1.html#" data-toggle-theme class="header-icon header-icon-4"><i class="fas fa-lightbulb"></i></a>*@
        </div>
        <div class="page-content header-clear-medium">
            <div class="card card-style">
                <div class="content my-0">
                    <div class="d-flex px-3 pb-0 notch-clear mt-4">
                        <div class="align-self-center">
                            <h1 class="font-26 mb-n1">@AppResources.FindADoctor</h1>
                            <p class="font-14 mb-0 opacity-70 fw-bold color-orange-light">@AppResources.Alwayshereforyou</p>
                        </div>
                    </div>
                    <a href="hybrid:GotoSearchSpecialty" onclick="LoaderShow();">
                        <div class="card card-style bg-highlight mt-4">
                            <div class="d-flex">
                                <div class="ps-2 ms-2 align-self-center">
                                    <h1 class="pt-4 color-white">@AppResources.FindBySpecialty</h1>
                                    <p class="font-14 color-white mt-n2 mb-4 opacity-70">@AppResources.Findthenearestdoctorforyou</p>
                                </div>
                                <div class="ms-auto me-3 align-self-center">
                                    <i class="fa fa-map-marker-alt color-white fa-2x mt-4 mb-4"></i>
                                </div>
                            </div>
                        </div>
                    </a>
                    <a href="hybrid:GotoSearchName">
                        <div class="card card-style mt-4 bg-highlight">
                            <div class="d-flex">
                                <div class="ps-2 ms-2 align-self-center">
                                    <h1 class="pt-4 color-white">@AppResources.FindByName</h1>
                                    <p class="font-14 color-white mt-n2 mb-4 opacity-70">@AppResources.Findthedocoryouarelookingfor</p>
                                </div>
                                <div class="ms-auto me-3 align-self-center">
                                    <i class="fa fa-user-nurse color-white fa-2x mt-4 mb-4"></i>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>


        </div>
    </div>
    <script type="text/javascript" src="Sticky/scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="Sticky/scripts/custom.js"></script>
    <script type="text/javascript" src="Sticky/scripts/EDS.js"></script>

</body>
</html>