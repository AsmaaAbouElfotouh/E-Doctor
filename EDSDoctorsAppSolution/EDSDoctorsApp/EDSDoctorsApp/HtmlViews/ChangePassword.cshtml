@using EDSDoctorsApp.Resources
<!DOCTYPE HTML>
<html lang="en" dir="@AppResources.dir">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, viewport-fit=cover" />
    <title>eDoctor Patient - Change Password</title>
    <link rel="stylesheet" type="text/css" href="@string.Concat("Sticky/styles/bootstrap",AppResources.dir2,".css")">
    <link href="Sticky/fonts/css.css?family=Roboto:300,300i,400,400i,500,500i,700,700i,900,900i|Source+Sans+Pro:300,300i,400,400i,600,600i,700,700i,900,900i&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="Sticky/fonts/css/fontawesome-all.min.css">
    <link rel="manifest" href="_manifest.json" data-pwa-version="set_in_manifest_and_pwa_js">
    <link rel="apple-touch-icon" sizes="180x180" href="Sticky/app/icons/icon-192x192.png">
    <link href="Sticky/styles/highlights/highlight_dark.css" rel="stylesheet" />
</head>
<body class="theme-light" data-highlight="highlight-dark" data-gradient="body-default">
    <div id="page">
        <div class="header header-fixed header-logo-center">
            <p class="header-title">Change Password</p>
            <a href="hybrid:goback" data-back-button class="header-icon header-icon-1"><i class="fas fa-arrow-left"></i></a>
            @*<a href="page-forgot-1.html#" data-toggle-theme class="header-icon header-icon-4"><i class="fas fa-lightbulb"></i></a>*@
        </div>

        <div class="page-content header-clear-medium">
            <div class="card card-style">
                <div class="content mb-0">
                    <form action="hybrid:DoChangePassword?" id="ChangePassword" onsubmit="$('#submit-button').attr('disabled', 'disabled'); LoaderShow();">
                        <h1 class="text-center"><i class="fa fa-user-lock fa-3x color-highlight mt-3"></i></h1>
                        <p class="text-center color-orange-light font-14">@AppResources.Pleaseenteryournewpassword</p>
                        <div class="input-style no-borders has-icon validate-field mt-2">
                            <i class="fa fa-lock"></i>
                            <input type="password" class="form-control validate-password" id="NewPassword" name="NewPassword" placeholder="@AppResources.ChooseaPassword" required>
                            <label for="NewPassword" class="color-highlight font-14 mt-1">@AppResources.ChooseaPassword</label>
                            <i class="fa fa-times disabled invalid color-red-dark"></i>
                            <i class="fa fa-check disabled valid color-green-dark"></i>
                            <em>@AppResources.required</em>
                        </div>
                        <div class="input-style no-borders has-icon validate-field mt-2">
                            <i class="fa fa-lock"></i>
                            <input type="password" class="form-control validate-password" id="ConfirmedPassword" name="ConfirmedPassword" placeholder="@AppResources.ConfirmyourPassword" required>
                            <label for="ConfirmedPassword" class="color-highlight font-14 mt-1">@AppResources.ConfirmyourPassword</label>
                            <i class="fa fa-times disabled invalid color-red-dark"></i>
                            <i class="fa fa-check disabled valid color-green-dark"></i>
                            <em>@AppResources.required</em>
                        </div>
                        @*<a href="#" class="btn btn-m btn-full rounded-s shadow-l bg-green-dark text-uppercase font-900 mt-4" onclick="ChangePassword()">Update Password</a>
                            <div class="divider"></div>*@
                        <button id="submit-button" type="submit" data-back-button class="btn btn-m btn-full mt-4 mb-4 rounded-l shadow-xl bg-highlight font-900 font-14 text-uppercase">@AppResources.UpdatePassword</button>
                    </form>
                </div>
            </div>
        </div>

        <div id="toast-main" class="toast toast-tiny toast-container toast-bottom bg-orange-light" data-bs-delay="2000" data-autohide="true">
            @*<i class="fa fa-savex fa-spinx me-3"></i>*@
            <i class="toast-message"></i>
        </div>
    </div>
    <script type="text/javascript" src="Sticky/scripts/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="Sticky/scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="Sticky/scripts/custom.js"></script>
    <script type="text/javascript" src="Sticky/scripts/EDS.js"></script>
    <script></script>
</body>
</html>